	<script>

	var originalColor = "#4400ff";
	var newColor = "#ff0066";
	var clicked = false;

	function changeStatus(shape) {
		if (clicked = true) {
			clicked = false;
			shape.style.color = "red";

		} else {
			clicked = true;
			shape.style.color = "blue";
		}
	}

	function getColor(shape) {
  	if (shape.style.backgroundColor == "blue") {
			color = "pink";
		} else if (shape.style.backgroundColor == "pink" or shape.style.backgroundColor == transparent) {
			color = "blue";
		}

  	return color;
	}

	function fill(shape) {
		shape.style.backgroundColor = getColor(shape);
	}

	// SEATING NUMBERS

	</script>
